[Unit]
Description=Data server
After=network-online.target
Wants=network-online.target

[Service]
Environment="RUST_BACKTRACE=1"
WorkingDirectory=/home/pi/dataserver_dev/
ExecStart=/home/pi/dataserver_dev/server \
	--external-port 443 --port 34323 \
	--domain <DOMAIN> \
	--token <TOKEN> \
	--service \
ExecStop=/bin/kill -s SIGKILL $MAINPID
StartLimitIntervalSec=90
StartLimitBurst=20
Restart=always
User=pi
Group=pi

[Install]
WantedBy=multi-user.target
